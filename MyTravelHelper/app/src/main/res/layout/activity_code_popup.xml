<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="200dp"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.dsm2016.mytravelhelper.CodePopupActivity"
    tools:layout_editor_absoluteX="13dp"
    tools:layout_editor_absoluteY="10dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="95dp"
        android:layout_height="38dp"
        android:text="초대코드"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="#000000"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방 설정 > 초대코드 에서 확인하실 수 있습니다."
        android:layout_marginLeft="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
        android:textColor="@android:color/darker_gray"
        android:visibility="visible"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="54dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초대코드를 누르면 클립보드에 복사할 수 있습니다."
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
        android:textColor="@android:color/darker_gray"
        android:visibility="visible"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="54dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_inviteCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="80dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_okay"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:layout_weight="0.10"
            android:background="@android:color/background_light"
            android:text="확인"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
            android:textColor="@color/colorAccent"
            tools:layout_editor_absoluteX="227dp"
            tools:layout_editor_absoluteY="136dp" />

    </RelativeLayout>

</LinearLayout>
